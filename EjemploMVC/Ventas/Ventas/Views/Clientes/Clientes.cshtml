@using Ventas.Models
@using System.Web.Mvc.Html

@model ClientesViewModel

<h2>Clientes</h2>

<br /><br />

@using (Html.BeginForm("GuardarClientes", "Clientes", FormMethod.Post)) {   

    for (int i = 0; i < Model.clientes.Count; i++) 
     {
        <table class="table-bordered">
            <tr>
                <td>Id cliente:</td>
                <td>@Html.DisplayFor(m => m.clientes[i].id)</td>
                @Html.HiddenFor(m => m.clientes[i].id)
            </tr>
            <tr>
                <td>Nombre:</td>
                <td>@Html.TextBoxFor(m => m.clientes[i].nombre, new { id = "nombre", @class = "form-control" })</td>
            </tr>
            <tr>
                <td>Apellido 1:</td>
                <td>@Html.TextBoxFor(m => m.clientes[i].apellido1, new { @class = "form-control" })</td>
            </tr>
            <tr>
                <td>Apellido 2:</td>
                <td>@Html.TextBoxFor(m => m.clientes[i].apellido2, new { @class = "form-control" })</td>
            </tr>
            <tr>
                <td>Teléfono:</td>
                <td>@Html.TextBoxFor(m => m.clientes[i].telefono, new { @class = "form-control" })</td>
            </tr>
        </table>

        <br />
     }
     
     <input type="submit" value="Guardar" class="btn btn-primary"/>

}

